extends ./patterns/layout.jade

block content
	.wrap
		nav
			.nav-wrapper
				.center
					a(href="/").breadcrumb Главная
					a(href="/rooms").breadcrumb Комнаты
					a(href="#").breadcrumb= room.name

		section.object-section.z-depth-1.container.section
			.row
				.col.s5
					.object-image.circle.z-depth-2(style="background-image: url(#{room.img});")

				.col.s7
					h1.object-name.flow-text= room.name
					h4.object-description.flow-text= room.description

		section.table-section.z-depth-1.container.section
				span.flow-text ТАБЛИЦА ПОСЕЩЕНИЯ

				a(href="#{room.id}/csv?").right.btn-floating.btn-large.red
					i.material-icons speaker_notes 	
				
				if visit_list			
					table.centered.highlight
						thead
							tr
								th Клиент
								th Время
								th Дата

						tbody
							each list in visit_list
								tr
									td
										a(href="/user/"+list.user.id)= list.user.name
									td= list.time
									td= list.date
				else
					p.flow-text.center Нет данных о посещениях